{
  "version": "0.2.0",
  "configurations": [
  {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": false,
    },
    {
      "name": "Python:Streamlit",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
          "run",
          "${file}",
          "--server.port",
          "2000"
      ]
  }
  ]
}